<div class="component intro">
  <%= render 'admin/auth/header' %>
  <div class="top-50 mid-small center">
    <%= form_tag login_auth_index_path do %>
      <%= label_tag :email, 'Email' %><br>
      <%= email_field_tag :email, nil, placeholder: 'hello@example.com', required: true %><br><br>
      <%= label_tag :password, 'Password' %><br>
      <%= password_field_tag :password, nil, placeholder: 'Abc123', required: true %><br><br>
      <%= submit_tag 'Login', class: 'chip mid-small active weight-600' %>
    <% end %>
  </div>
</div>

<style type="text/css">
  .intro {
    padding-top: 30px;
  }
</style>
